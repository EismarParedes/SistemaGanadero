<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.praderas.DatosPotreros">

    <ListView
        android:id="@+id/listPotreros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/primaryDarkColor"
        android:scrollbars="vertical"
        android:dividerHeight="1dp">
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatNewPotrero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:tint="@color/secondaryTextColor"
        android:src="@drawable/plus"
        app:backgroundTint="@color/secondaryLightColor"
        app:borderWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/content_float">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>