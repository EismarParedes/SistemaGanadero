<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#ffffff"
                        android:startColor="#ffffff"
                        android:type="linear"/>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/darker_gray"/>

                    <corners
                        android:radius="6dp"/>

                    <padding
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp"/>
                </shape>
            </item>
            <item android:right="10dp">
                <bitmap android:gravity="center_vertical|end"
                    android:src="@drawable/dropdownarrow"/>
            </item>
        </layer-list>
    </item>
</selector>